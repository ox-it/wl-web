## chef_news-Layout.vm, use with org.chefproject.NewsAction.java
##     context: $panel-monitor: String list panel url addition
##              $panel-control: String controls panel url addition
##
<div class="portletBody">
	#if($menu)#toolbar($menu)#end
	#if ($alertMessage)
		<div class="alertMessage">
			$tlang.getString("gen.alert") $validator.escapeHtml($alertMessage)
		</div>
		<div class="clear" />
	#end
		#if($channel.ImageUrl)
			<div style="text-align: center;margin-top:1em;float:right">
					<a href="$channel.ImageLink" target="_blank">
						<img src="$channel.ImageUrl" border="0" alt="$channel.ImageTitle" alt="$channel.ImageDescription" /> ##omit size info - ie will assume 0 if not present
					</a>
			</div>
		#end
		#if($channel.Title)
			<h3>
				$channel.Title
			</h3>
		#end
		#if($channel.Description)
			<p class="textPanel">
				$channel.Description 
			</p>
		#end
			<p class="textPanelFooter">
				#if($channel.Link)
						<a href="$validator.escapeHtml($channel.Link)" target="_blank" title="$channel.Title">($graphic_version)</a>
				#end
				#if($channel.Copyright)
						- $channel.Copyright
				#end
				#if($channel.Lastbuilddate)
						 - $channel.Lastbuilddate
				#end
			</p>

		<hr class="itemSeparator" />
		<iframe
			name="$validator.escapeJavascript("$panel-monitor")"
			id="$validator.escapeJavascript("$panel-monitor")"
			title="$panel-monitor"
			width="97%"
			height="350"
			frameborder="0"
			marginwidth="0"
			marginheight="0"
			scrolling="auto"
			align="middle"
			src="#contentLink("$panel-monitor")">
		</iframe>
		<br />
		<iframe
			name="$validator.escapeJavascript("$panel-control")"
			id="$validator.escapeJavascript("$panel-control")"
			title="$panel-control"
			width="100%"
			height="50"
			frameborder="0"
			marginwidth="0"
			marginheight="0"
			scrolling="no"
			align="middle"
			src="#contentCourierLink("$panel-control")">
		</iframe>
</div>

